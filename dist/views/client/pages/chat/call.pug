doctype html
html(lang="en")
  head
    title Video Call
    link(rel="stylesheet" href="/css/style.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    link(rel="icon" href="/favicon.ico" type="image/x-icon")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      body {
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      .video-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
        flex-wrap: wrap;
      }
      video {
        width: 100%;
        border-radius: 10px;
        border: 1px solid #dee2e6;
      }
      .col-md-6 {
        padding: 0;
        max-width: 600px;
      }
      .video-wrapper {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* Aspect ratio 16:9 */
        background: #000;
        border-radius: 10px;
        overflow: hidden;
      }
      .video-wrapper video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
      .btn-finish {
        width: 100%;
        padding: 15px;
        background-color: #ff4d4d;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s;
      }
      .btn-finish:hover {
        background-color: #ff1a1a;
      }
      .notifications {
        margin-top: 20px;
        text-align: center;
      }
      .notifications p {
        font-size: 18px;
        color: #333;
      }

  body
    .container(myId = user.id)
      h1.text-center.mb-4 Video Call
      .input-group.mb-3
        button#join.btn.btn-danger(btn-finish) Kết thúc cuộc gọi
      .video-container
        .col-md-6
          .video-wrapper
            video#remote-video(autoplay playsinline)
        .col-md-6
          .video-wrapper
            video#local-video(autoplay muted playsinline)
    .notifications
      #notifications
        p Chờ kết nối hoặc kết thúc cuộc gọi.

    script(src="/socket.io/socket.io.js")  
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="https://unpkg.com/peerjs@1.5.4/dist/peerjs.min.js")
    script(src="/js/socket.js")
    script(src="/js/call.js")
