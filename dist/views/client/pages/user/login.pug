
include ../../mixins/alert.pug
doctype html
html
    head
        link(rel="stylesheet" href="/css/style.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

    body
        +alert-success(3000)
        +alert-error(3000)
        .body-login
            form(action="login" method="post")
                .login-box
                    .login-header
                        header Welcome
                        p We are happy to have you back!
                    .input-box
                        input(type="text" class="input-field" name="phone" autocomplete="off" )
                        label(for="phone") Phone Number
                    .input-box
                        input(type="password" class="input-field" name="password" autocomplete="off" )
                        label(for="password") Password
                    .forgot
                        section
                            input(type="checkbox" name="check")
                            label(for="check") Remember me
                        section
                            a(href="password/forgot" class="forgot-link") Forgot password?
                    .input-box
                        button(type="submit" class="input-submit btn btn-success") Sign In
                    .middle-text
                        hr
                        p.or-text Or
                    .input-box
                        a.input-social.btn.btn-light(href="/user/login/federated/google")
                            img(src="https://res.cloudinary.com/dwk6tmsmh/image/upload/v1722602737/jnwhzzq4939gb1gl7edy.png" alt="")
                            p.fw-bold.text-uppercase Đăng nhập với Google
                    .input-box
                        a.btn.input-social.btn-light(href="/user/login/federated/facebook")
                            img(src="https://res.cloudinary.com/dwk6tmsmh/image/upload/v1729341273/zrzv5lyvnzpyfslzncoj.png" alt="")
                            p.fw-bold.text-uppercase Đăng nhập với Facebook
                    .sign-up
                        p Don't have account 
                            a(href="register") Sign up
            
    script(src="/js/script.js")

    