extends ../../layouts/defaultUser.pug
include ../../mixins/alert.pug
block main 
    +alert-success(3000)
    +alert-error(3000)
    .container.body-forgot-password
        .row.justify-content-center
            .col-xl-4.col-lg-5.col-md-7.col-sm-9
                .text-center.logo
                    img(src="https://cryptologos.cc/logos/chatcoin-chat-logo.png", alt="" width="50px")
                    a.logo(href="") ConnectMe
                .card
                    form(action="/user/password/forgot" method="post")
                        .forgot-password-box
                            .forgot-password-header 
                                h3 Tìm tài khoản của bạn
                                p Vui lòng nhập email để tìm kiếm tài khoản của bạn
                            .input-box
                                input.input-field(type="text" name="email" autocomplete="off")
                                label(for="email") Email
                            .input-box
                                button.input-submit.btn.btn-primary(type="submit") Gửi email xác nhận
                .text-footer
                    span.reminder-text Đã có tài khoản
                    a.login-link(href="/user/login") Đăng nhập
                        

