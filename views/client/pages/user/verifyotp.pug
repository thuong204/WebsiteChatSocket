extends ../../layouts/defaultUser.pug
include ../../mixins/alert.pug
block main 
    +alert-success(3000)
    +alert-error(3000)
    .otp-verifyaccount
        form(action="/user/register/otp" method="post")
            .otp-password-box
                .header-content.d-flex.justify-content-center.mb-3
                    span.media(style="margin-right:10px")
                        img(class="d-inline-block align-top"
                        src="https://cryptologos.cc/logos/chatcoin-chat-logo.png"
                        width="45" height="45") 
                    h2.text-primary.text-center Chat
                .forgot-password-header.mb-3.text-center
                    h3 Nhập mã OTP xác thực
                    small.text-danger Vui lòng kiểm tra mã OTP ở số điện thoại mà bạn đã đăng kí ứng dụng. Mã OTP có hiệu lực 5 phút.
                .input-box
                    input.input-field(type="text" name="otp" autocomplete="off" required)
                    label(for="otp") Mã OTP
                .input-box
                    button.input-submit.btn.btn-primary(type="submit") Xác nhận 
                .send-otp
                    a(href="send-otp").text-decoration-none.text-danger Gửi lại mã xác nhận

