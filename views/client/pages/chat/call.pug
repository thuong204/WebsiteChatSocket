doctype html
html(lang="en")
  head
    title Video Call
    link(rel="stylesheet" href="/css/style.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    link(rel="icon" href="/favicon.ico" type="image/x-icon")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      body {
        background-color: #f8f9fa;
      }
      .video-container {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-top: 20px;
      }
      video#local-video {
        width: 100%;
        border-radius: 10px;
        border: 1px solid #dee2e6;
      }
      video#local-video {
        width: 50%;
        border-radius: 10px;
        border: 1px solid #dee2e6;
      }

  body
    .container
      h1.text-center.mb-4 Video Call
      .input-group.mb-3
        input#peer-id.form-control(type="text" placeholder="Nhập ID Peer khác")
        button#call-peer.btn.btn-primary Bắt đầu gọi
        button#join.btn.btn-success Tham gia
      .video-container
        .col-md-6
          video#remote-video(autoplay playsinline)
        .col-md-6
          video#local-video(autoplay muted playsinline)
    script(src="/js/socket.io.js")
    script(src="/socket.io/socket.io.js")  
    script(type ="module" src="/js/call.js")
    script(src="https://unpkg.com/peerjs@1.5.4/dist/peerjs.min.js")
    script(type="module" src="/js/chat.js")
